<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 审批记录表单视图 -->
    <record id="view_approval_record_form" model="ir.ui.view">
        <field name="name">approval.record.form</field>
        <field name="model">approval.record</field>
        <field name="arch" type="xml">
            <form create="0" delete="0">
                <header>
                    <button name="action_approve"
                            string="同意"
                            type="object"
                            class="btn btn-success"
                            attrs="{'invisible': ['|', ('state', '!=', 'pending'), '&amp;', ('is_current_user_allowed', '=', False), ('is_admin', '=', False)]}"/>
                    <button name="action_reject"
                            string="拒绝"
                            type="object"
                            class="btn btn-danger"
                            attrs="{'invisible': ['|', ('state', '!=', 'pending'), '&amp;', ('is_current_user_allowed', '=', False), ('is_admin', '=', False)]}"/>
                    <button name="action_transfer_approval"
                            string="转让审批"
                            type="object"
                            class="oe_link"
                            attrs="{'invisible': ['|', ('state', '!=', 'pending'), '&amp;', ('is_current_user_allowed', '=', False), ('is_admin', '=', False)]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="is_current_user_allowed" invisible="1"/>
                            <field name="approve_type" invisible="1"/>
                            <field name="is_admin" invisible="1"/>
                            <field name="name" readonly="1"/>
                            <field name="order_name" readonly="1"/>
                            <field name="process_id" readonly="1"/>
                            <field name="current_node_id" readonly="1"/>
                            <field name="user_ids" widget="many2many_tags"
                                   attrs="{'invisible': [('approve_type', '!=', 'user')]}" readonly="1"/>
                            <field name="department_id"
                                   attrs="{'invisible': [('approve_type', '!=', 'department')]}" readonly="1"/>
                            <field name="position_id"
                                   attrs="{'invisible': [('approve_type', '!=', 'position')]}" readonly="1"/>
                        </group>
                        <group>
                            <!--                            <field name="res_name" readonly="1"/>-->
                            <field name="model_id" readonly="1"/>
                            <field name="date" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="审批信息内容">
                            <field name="dynamic_data_lines">
                                <tree create="0" delete="0">
                                    <field name="field_key" readonly="1"/>
                                    <field name="field_value" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <notebook>
                        <page string="审批订单明细行">
                            <field name="line_data_lines">
                                <tree create="0" delete="0">
                                    <field name="line_value_parsed" string="订单明细行" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <notebook>
                        <page string="审批历史">
                            <field name="line_ids">
                                <tree create="0" delete="0">
                                    <field name="node_id" readonly="1"/>
                                    <field name="user_id" readonly="1"/>
                                    <field name="result" readonly="1"/>
                                    <field name="approve_date" readonly="1"/>
                                    <field name="note"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- 审批记录列表视图 -->
    <record id="view_approval_record_tree" model="ir.ui.view">
        <field name="name">approval.record.tree</field>
        <field name="model">approval.record</field>
        <field name="arch" type="xml">
            <tree delete="0" create="0">
                <field name="name"/>
                <field name="order_name"/>
                <field name="date"/>
                <field name="process_id"/>
                <!--                <field name="res_name"/>-->
                <field name="model_id"/>
                <field name="current_node_id"/>
                <field name="user_ids" widget="many2many_tags"
                       attrs="{'invisible': [('approve_type', '!=', 'user')]}"/>
                <field name="department_id"
                       attrs="{'invisible': [('approve_type', '!=', 'department')]}"/>
                <field name="position_id"
                       attrs="{'invisible': [('approve_type', '!=', 'position')]}"/>
                <field name="state"/>
                <field name="approve_type" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- 审批记录动作 -->
    <record id="action_approval_record" model="ir.actions.act_window">
        <field name="name">审批记录</field>
        <field name="res_model">approval.record</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_pending': 1}</field>
    </record>

    <record id="approval_record_tree_search" model="ir.ui.view">
        <field name="name">jl.buy.order.search</field>
        <field name="model">approval.record</field>
        <field name="arch" type="xml">
            <search string="搜索">
                <field name="name"/>
                <field name="order_name"/>
                <field name="user_ids"/>
                <filter name="pending" string="审批中" domain="[('state','=','pending')]"/>
                <filter name="approved" string="已批准" domain="[('state','=','approved')]"/>
                <filter name="rejected" string="已拒绝" domain="[('state','=','rejected')]"/>
            </search>
        </field>
    </record>
</odoo>