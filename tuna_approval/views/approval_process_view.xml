<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 审批流程表单视图 -->
    <record id="view_approval_process_form" model="ir.ui.view">
        <field name="name">approval.process.form</field>
        <field name="model">approval.process</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_save" string="使用" type="object" class="oe_highlight" states="draft"/>
                    <button name="action_cancel" string="撤销" type="object" class="oe_highlight" states="confirmed"/>
                    <field name="active" widget="boolean_toggle"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="model_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="ing_write"/>
                            <field name="end_write"/>
                        </group>
                        <group>
                            <field name="model_name" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="type" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="审批节点">
                            <field name="node_ids" attrs="{'readonly': [('state', '!=', 'draft')]}">
                                <tree>
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="approve_type"/>
                                    <field name="user_ids" widget="many2many_tags"
                                           attrs="{'required': [('approve_type', '=', 'user')],
                                                  'invisible': [('approve_type', '!=', 'user')]}"/>
                                    <field name="department_id"
                                           attrs="{'required': [('approve_type', '=', 'department')],
                                                  'invisible': [('approve_type', '!=', 'department')]}"/>
                                    <field name="position_id"
                                           attrs="{'required': [('approve_type', '=', 'position')],
                                                  'invisible': [('approve_type', '!=', 'position')]}"/>
                                    <field name="multi_user_type"/>
                                </tree>
                            </field>
                        </page>
                        <page string="字段信息">
                            <field name="line_ids" context="{'default_model_id': model_id}">
                                <tree default_order="sequence">
                                    <field name="sequence" widget="handle"/>
                                    <field name="model_id"/>
                                    <field name="field_id"/>
                                    <field name="ttype" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="禁止使用方法">
                            <group>
                                <field name="start_button_ids" widget="many2many_tags" options="{'no_create': True}"/>
                                <field name="button_ids" widget="many2many_tags" options="{'no_create': True}"/>
                                <field name="pass_button_ids" widget="many2many_tags" options="{'no_create': True}"/>
                                <field name="end_button_ids" widget="many2many_tags" options="{'no_create': True}"/>
                            </group>
                        </page>
                        <page string="审批触发方法" name="code">
                            <group col="2">
                                <group>
                                    <field name="python_done" placeholder="多个函数方法时用用,符号隔开"/>
                                    <field name="python_rejected" placeholder="多个函数方法时用用,符号隔开"/>
                                </group>
                                <group>
                                    <field name="python_pending" placeholder="多个函数方法时用,符号隔开"/>
                                    <field name="python_restart" placeholder="多个函数方法时用,符号隔开"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- 审批流程列表视图 -->
    <record id="view_approval_process_tree" model="ir.ui.view">
        <field name="name">approval.process.tree</field>
        <field name="model">approval.process</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="model_id"/>
                <field name="model_name"/>
                <field name="type"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="state"/>
                <field name="create_date"/>
                <field name="write_date"/>
            </tree>
        </field>
    </record>

    <record id="approval_control_line_form_view" model="ir.ui.view">
        <field name="name">审批配置字段信息</field>
        <field name="model">approval.control.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="field_id" required="1" options="{'no_open': True, 'no_create_edit': True}"/>
                        </group>
                        <group>
                            <field name="process_id" invisible="1"/>
                            <field name="model_id" required="1"/>
                            <field name="ttype" required="1"/>
                        </group>
                    </group>
                    <field name="list_ids" context="{'default_line_field_id': field_id}"
                           attrs="{'invisible':[('ttype','!=','one2many')]}">
                        <tree default_order="sequence" editable="bottom">
                            <field name="sequence" widget="handle"/>
                            <field name="line_field_id" options="{'no_open': True, 'no_create_edit': True}"/>
                            <field name="field_id" options="{'no_open': True, 'no_create_edit': True}"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="approval_process_node_form_view" model="ir.ui.view">
        <field name="name">审批字段设置</field>
        <field name="model">approval.process.node</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1" options="{'no_open': True, 'no_create_edit': True}"/>
                        </group>
                        <group>
                            <field name="process_id" invisible="1"/>
                            <field name="approve_type"/>
                            <field name="user_ids" widget="many2many_tags"
                                   attrs="{'required': [('approve_type', '=', 'user')],
                                                  'invisible': [('approve_type', '!=', 'user')]}"/>
                            <field name="department_id"
                                   attrs="{'required': [('approve_type', '=', 'department')],
                                                  'invisible': [('approve_type', '!=', 'department')]}"/>
                            <field name="position_id"
                                   attrs="{'required': [('approve_type', '=', 'position')],
                                                  'invisible': [('approve_type', '!=', 'position')]}"/>
                            <field name="multi_user_type"/>
                        </group>
                    </group>
                    <field name="node_fields">
                        <tree editable="bottom">
                            <field name="field_id" options="{'no_open': True, 'no_create_edit': True}"/>
                            <field name="readonly"/>
                            <field name="required"/>
                            <field name="invisible"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <!-- 审批流程搜索视图 -->
    <record id="view_approval_process_search" model="ir.ui.view">
        <field name="name">approval.process.search</field>
        <field name="model">approval.process</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="model_id"/>
                <field name="model_name"/>
                <filter string="已激活" name="active" domain="[('active','=',True)]"/>
                <filter string="未激活" name="inactive" domain="[('active','=',False)]"/>
                <separator/>
                <filter string="草稿" name="draft" domain="[('state','=','draft')]"/>
                <filter string="已确认" name="confirmed" domain="[('state','=','confirmed')]"/>
                <group expand="0" string="分组">
                    <filter string="状态" name="state" context="{'group_by':'state'}"/>
                    <filter string="审批方式" name="type" context="{'group_by':'type'}"/>
                </group>
            </search>
        </field>
    </record>


    <record id="action_approval_process" model="ir.actions.act_window">
        <field name="name">审批流程</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">approval.process</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
    </record>
</odoo>