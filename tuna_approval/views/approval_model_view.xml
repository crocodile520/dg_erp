<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 审批模型表单视图 -->
    <record id="view_approval_model_form" model="ir.ui.view">
        <field name="name">approval.model.form</field>
        <field name="model">approval.model</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_enable" 
                            string="启用"
                            states='draft'
                            type="object"
                            class="oe_highlight"/>

                    <button name="action_disable" 
                            string="禁用"
                            states='done'
                            type="object"/>
                    <button name="action_cancel"
                            string="撤回"
                            states='disabled'
                            type="object"
                            class="oe_highlight"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="process_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="model_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="active"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- 审批模型列表视图 -->
    <record id="view_approval_model_tree" model="ir.ui.view">
        <field name="name">approval.model.tree</field>
        <field name="model">approval.model</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="model_id"/>
                <field name="state"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- 审批模型动作 -->
    <record id="action_approval_model" model="ir.actions.act_window">
        <field name="name">审批模型</field>
        <field name="res_model">approval.model</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>