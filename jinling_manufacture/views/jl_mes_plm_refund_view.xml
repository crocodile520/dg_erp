<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="jl_mes_plm_refund_view_tree" model="ir.ui.view">
            <field name="name">Mes Plm Refund Tree</field>
            <field name="model">jl.mes.plm.refund</field>
            <field name="arch" type="xml">
                <tree string="生产退料单" delete="0">
                    <field name="name" optional="show"/>
                    <field name="plm_id" optional="show"/>
                    <field name="user_id" optional="show"/>
                    <field name="date" optional="show"/>
                    <field name="state" optional="show"/>
                </tree>
            </field>
        </record>

        <record id="jl_mes_plm_refund_view_form" model="ir.ui.view">
            <field name="name">Mes Plm Refund Form</field>
            <field name="model">jl.mes.plm.refund</field>
            <field name="arch" type="xml">
                <form string="生产退料" class="o_sale_order" duplicate="1" delete="0">
                    <header>
                        <button name='button_done' states='draft' string='确认' type='object' class='oe_highlight' icon="fa-check"/>
                        <button name="button_draft" states="done" string="撤销" type="object" icon="fa-reply"/>
                        <button name="button_cancel" states="draft" string="作废" type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,start,done,stop" readonly="1"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" readonly="1"/>
                                <field name="plm_id" optional="show" readonly='1'/>
                            </group>
                            <group>
                               <field name="user_id" optional="show" readonly="1"/>
                                <field name="date" optional="show" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="生产退料单明细">
                                <field name='line_ids' >
                                    <tree string="生产退料单明细" editable='bottom'>
                                        <field name="goods_id" string="商品" optional="show"/>
                                        <field name="describe" optional="show"/>
                                        <field name="specs" optional="show"/>
                                        <field name="uom_id" optional="show"/>
                                        <field name="warehouse_id" optional="show"/>
                                        <field name="qty" optional="show" sum="数量"/>
                                        <field name="ms1_qty" sum="数量合计" readonly="1"/>
                                        <field name="ms2_qty" sum="数量合计" readonly="1"/>
                                        <field name="ms3_qty" sum="数量合计" readonly="1"/>
                                        <field name="ms4_qty" sum="数量合计" readonly="1"/>
                                        <field name="gms1_qty" sum="数量合计" readonly="1"/>
                                        <field name="gms2_qty" sum="数量合计" readonly="1"/>
                                        <field name="gms3_qty" sum="数量合计" readonly="1"/>
                                        <field name="gms4_qty" sum="数量合计" readonly="1"/>
                                        <field name="note" optional="show"/>
<!--                                        <field name="state" invisible='1'/>-->
                                    </tree>
                                </field>
                                <group>
                                    <group>
                                        <field name="create_uid" readonly="1" string="制单人"/>
                                        <field name="approve_uid" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="create_date" readonly="1" string="录单时间"/>
                                        <field name="write_date" readonly="1" string="最后修改时间"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                        <field name="note" optional="show" attrs="{'readonly': [('state', '!=', 'draft')]}" placeholder="备注"/>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        <record id='jl_mes_plm_refund_tree_search' model='ir.ui.view'>
            <field name='name'>jl.mes.plm.refund.search</field>
            <field name='model'>jl.mes.plm.refund</field>
                <field name='arch' type='xml'>
                    <search string='生产退料单搜索'>
                        <field name="name" optional="show"/>
                        <field name="plm_id" optional="show"/>
                        <field name="user_id" optional="show"/>
                        <filter name='draft' string='草稿' domain="[('state','=','draft')]"/>
                        <filter name='done' string='确认' domain="[('state','=','done')]"/>
                    </search>
                </field>
        </record>
    </data>
</odoo>