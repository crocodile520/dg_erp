<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 审批记录表单视图 -->
    <record id="view_approval_record_form" model="ir.ui.view">
        <field name="name">jl.approval.record.form</field>
        <field name="model">jl.approval.record</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_approve" 
                            string="同意" 
                            type="object" 
                            class="oe_highlight"
                            attrs="{'invisible': ['|', ('state', '!=', 'pending'), ('current_node_id', '=', False)]}"/>
                    <button name="action_reject" 
                            string="拒绝" 
                            type="object"
                            attrs="{'invisible': ['|', ('state', '!=', 'pending'), ('current_node_id', '=', False)]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="process_id"/>
                            <field name="current_node_id"/>
                        </group>
                        <group>
                            <field name="res_name"/>
                            <field name="create_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="审批历史">
                            <field name="line_ids">
                                <tree>
                                    <field name="node_id"/>
                                    <field name="user_id"/>
                                    <field name="result"/>
                                    <field name="approve_date"/>
                                    <field name="note"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- 审批记录列表视图 -->
    <record id="view_approval_record_tree" model="ir.ui.view">
        <field name="name">jl.approval.record.tree</field>
        <field name="model">jl.approval.record</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="process_id"/>
                <field name="res_name"/>
                <field name="current_node_id"/>
                <field name="state"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <!-- 审批记录动作 -->
    <record id="action_approval_record" model="ir.actions.act_window">
        <field name="name">审批记录</field>
        <field name="res_model">jl.approval.record</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo> 