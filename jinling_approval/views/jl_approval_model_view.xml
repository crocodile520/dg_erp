<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 审批模型表单视图 -->
    <record id="view_approval_model_form" model="ir.ui.view">
        <field name="name">jl.approval.model.form</field>
        <field name="model">jl.approval.model</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_sync" 
                            string="同步" 
                            type="object"
                            class="oe_highlight"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_cancel"
                            string="取消同步"
                            type="object"
                            attrs="{'invisible': [('state', '!=', 'synced')]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="model_id"/>
                            <field name="model_name"/>
                        </group>
                        <group>
                            <field name="process_id"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="同步字段">
                            <field name="field_ids">
                                <tree>
                                    <field name="field_name"/>
                                    <field name="field_type"/>
                                    <field name="field_label"/>
                                    <field name="is_required"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- 审批模型列表视图 -->
    <record id="view_approval_model_tree" model="ir.ui.view">
        <field name="name">jl.approval.model.tree</field>
        <field name="model">jl.approval.model</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="model_id"/>
                <field name="process_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- 审批模型动作 -->
    <record id="action_approval_model" model="ir.actions.act_window">
        <field name="name">审批模型</field>
        <field name="res_model">jl.approval.model</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo> 