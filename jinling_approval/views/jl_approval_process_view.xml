<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 审批流程表单视图 -->
    <record id="view_approval_process_form" model="ir.ui.view">
        <field name="name">jl.approval.process.form</field>
        <field name="model">jl.approval.process</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_save" string="保存" type="object" class="oe_highlight" states="draft"/>
                    <field name="active" widget="boolean_toggle"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="model_id"/>
                            <field name="model_name"/>
                            <field name="type"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="审批节点">
                            <field name="node_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="approve_type"/>
                                    <field name="user_ids" widget="many2many_tags" 
                                           attrs="{'required': [('approve_type', '=', 'user')],
                                                  'invisible': [('approve_type', '!=', 'user')]}"/>
                                    <field name="department_id" 
                                           attrs="{'required': [('approve_type', '=', 'department')],
                                                  'invisible': [('approve_type', '!=', 'department')]}"/>
                                    <field name="position_id" 
                                           attrs="{'required': [('approve_type', '=', 'position')],
                                                  'invisible': [('approve_type', '!=', 'position')]}"/>
                                    <field name="multi_user_type"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- 审批流程列表视图 -->
    <record id="view_approval_process_tree" model="ir.ui.view">
        <field name="name">jl.approval.process.tree</field>
        <field name="model">jl.approval.process</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="model_id"/>
                <field name="model_name"/>
                <field name="type"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="state"/>
                <field name="create_date"/>
                <field name="write_date"/>
            </tree>
        </field>
    </record>

    <!-- 审批流程搜索视图 -->
    <record id="view_approval_process_search" model="ir.ui.view">
        <field name="name">jl.approval.process.search</field>
        <field name="model">jl.approval.process</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="model_id"/>
                <field name="model_name"/>
                <filter string="已激活" name="active" domain="[('active','=',True)]"/>
                <filter string="未激活" name="inactive" domain="[('active','=',False)]"/>
                <separator/>
                <filter string="草稿" name="draft" domain="[('state','=','draft')]"/>
                <filter string="已确认" name="confirmed" domain="[('state','=','confirmed')]"/>
                <group expand="0" string="分组">
                    <filter string="状态" name="state" context="{'group_by':'state'}"/>
                    <filter string="审批方式" name="type" context="{'group_by':'type'}"/>
                </group>
            </search>
        </field>
    </record>

