<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 审批统计报表树状视图 -->
    <record id="view_approval_report_tree" model="ir.ui.view">
        <field name="name">jl.approval.report.tree</field>
        <field name="model">jl.approval.report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="process_id"/>
                <field name="record_id"/>
                <field name="user_id"/>
                <field name="state"/>
                <field name="create_date"/>
                <field name="approve_date"/>
                <field name="duration" widget="float_time"/>
            </tree>
        </field>
    </record>

    <!-- 审批统计报表搜索视图 -->
    <record id="view_approval_report_search" model="ir.ui.view">
        <field name="name">jl.approval.report.search</field>
        <field name="model">jl.approval.report</field>
        <field name="arch" type="xml">
            <search>
                <field name="process_id"/>
                <field name="user_id"/>
                <field name="state"/>
                <filter string="本月" name="month" domain="[('create_date','&gt;=', (context_today() + relativedelta(day=1)).strftime('%Y-%m-%d')),('create_date','&lt;=', (context_today() + relativedelta(months=1, day=1, days=-1)).strftime('%Y-%m-%d'))]"/>
                <filter string="本年" name="year" domain="[('create_date','&gt;=', (context_today() + relativedelta(month=1, day=1)).strftime('%Y-%m-%d')),('create_date','&lt;=', (context_today() + relativedelta(month=12, day=31)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="分组">
                    <filter string="审批流程" name="process" context="{'group_by':'process_id'}"/>
                    <filter string="审批人" name="user" context="{'group_by':'user_id'}"/>
                    <filter string="状态" name="state" context="{'group_by':'state'}"/>
                    <filter string="月份" name="month" context="{'group_by':'create_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- 审批统计报表图表视图 -->
    <record id="view_approval_report_graph" model="ir.ui.view">
        <field name="name">jl.approval.report.graph</field>
        <field name="model">jl.approval.report</field>
        <field name="arch" type="xml">
            <graph string="审批统计" type="bar">
                <field name="process_id"/>
                <field name="duration" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- 审批统计报表透视表视图 -->
    <record id="view_approval_report_pivot" model="ir.ui.view">
        <field name="name">jl.approval.report.pivot</field>
        <field name="model">jl.approval.report</field>
        <field name="arch" type="xml">
            <pivot string="审批统计" display_quantity="true">
                <field name="process_id" type="row"/>
                <field name="state" type="col"/>
                <field name="duration" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- 审批统计报表动作 -->
    <record id="action_approval_report" model="ir.actions.act_window">
        <field name="name">审批统计</field>
        <field name="res_model">jl.approval.report</field>
        <field name="view_mode">graph,pivot,tree</field>
        <field name="search_view_id" ref="view_approval_report_search"/>
        <field name="context">{'search_default_month':1, 'search_default_process':1}</field>
    </record>
</odoo> 