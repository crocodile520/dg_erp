<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_sell_out_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.basic_layout">
                    <style>
                        .page {
                            padding: 10px;
                            font-size: 12px;
                        }
                        .main-table {
                            width: 100%;
                            border-collapse: collapse;
                        }
                        .main-table td {
                            border: 1px solid black;
                            padding: 4px;
                        }
                        .header-table {
                            width: 100%;
                            margin-bottom: 10px;
                        }
                        .company-logo {
                            width: 140px;
                            height: 60px;
                        }
                        .company-name {
                            font-size: 24px;
                            font-weight: bold;
                            text-align: center;
                        }
                        .document-title {
                            font-size: 20px;
                            font-weight: bold;
                            text-align: center;
                        }
                        .info-label {
                            width: 100px;
                            font-weight: bold;
                        }
                        .signature-table {
                            width: 100%;
                            margin-top: 20px;
                        }
                        .signature-table td {
                            width: 33.33%;
                            padding: 10px;
                            text-align: center;
                        }
                    </style>

                    <div class="page">
                        <!-- 头部表格 -->
                        <table class="header-table">
                            <tr>
                                <td width="140">
                                    <img class="company-logo" t-att-src="'/jinling_sell/static/description/logo.png'" alt="公司logo"/>
                                </td>
                                <td>
                                    <div class="company-name">东莞市新训电子科技有限公司</div>
                                    <div class="document-title">送 货 单</div>
                                </td>
                            </tr>
                        </table>

                        <!-- 基本信息表格 -->
                        <table class="main-table">
                            <tr>
                                <td class="info-label">收货单位：</td>
                                <td><span t-field="doc.partner_id.name"/></td>
                                <td width="100">NO.：</td>
                                <td width="200"><span t-field="doc.name"/></td>
                            </tr>
                            <tr>
                                <td class="info-label">收货地址：</td>
                                <td><span t-field="doc.partner_id.address"/></td>
                                <td>交货日期：</td>
                                <td><span t-field="doc.delivery_date"/></td>
                            </tr>
                        </table>

                        <!-- 商品明细表格 -->
                        <table class="main-table" style="margin-top: 10px;">
                            <thead>
                                <tr>
                                    <td>订单号码</td>
                                    <td>物料名称</td>
                                    <td>规格型号</td>
                                    <td>单位</td>
                                    <td>数量</td>
                                    <td>单价</td>
                                    <td>金额</td>
                                    <td>备注</td>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.line_ids" t-as="line">
                                    <tr>
                                        <td><span t-field="line.ref"/></td>
                                        <td><span t-field="line.goods_id.describe"/></td>
                                        <td><span t-field="line.goods_id.specs"/></td>
                                        <td><span t-field="line.goods_id.uom_id.name"/></td>
                                        <td><span t-field="line.qty"/></td>
                                        <td><span t-field="line.price"/></td>
                                        <td><span t-field="line.amount"/></td>
                                        <td><span t-field="line.note"/></td>
                                    </tr>
                                </t>
                                <tr>
                                    <td colspan="4" style="text-align: center;">合计</td>
                                    <td><span t-esc="sum(doc.line_ids.mapped('qty'))"/></td>
                                    <td></td>
                                    <td><span t-esc="sum(doc.line_ids.mapped('amount'))"/></td>
                                    <td></td>
                                </tr>
                            </tbody>
                        </table>

                        <!-- 金额大写表格 -->
                        <table class="main-table" style="margin-top: 10px;">
                            <tr>
                                <td>¥：<span t-esc="doc.amount_total_words"/></td>
                            </tr>
                        </table>

                        <!-- 底部签名表格 -->
                        <table class="signature-table">
                            <tr>
                                <td>
                                    收货单位及经手人（盖章）：
                                    <br/><br/>
                                </td>
                                <td>
                                    送货单位及经手人（盖章）：<span t-field="doc.user_id.name"/>
                                    <br/><br/>
                                </td>
                                <td>
                                    送货单位及财务：
                                    <br/><br/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>