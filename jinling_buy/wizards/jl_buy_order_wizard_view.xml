<odoo>
    <data>
        <record id="jl_buy_order_wizard_form" model="ir.ui.view">
            <field name="name">采购购货统计筛选</field>
            <field name="model">jl.buy.order.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="goods_id"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="button_confirm" type="object" string="确认" class="oe_highlight"/>
                        <button special="cancel" string="取消"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>